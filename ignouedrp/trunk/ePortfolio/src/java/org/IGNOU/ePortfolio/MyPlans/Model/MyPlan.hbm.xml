<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
  <class name="org.IGNOU.ePortfolio.MyPlans.Model.PlanTaskList" table="user_plan_task">
    <id column="task_id" name="task_id"/>
    <property column="plan_id" name="plan_id"/>
    <property column="t_title" name="t_title"/>
    <property column="t_description" name="t_description"/>
    <property column="t_date" name="t_date"/>
    <property column="status" name="status"/>
  </class>
  <class name="org.IGNOU.ePortfolio.MyPlans.Model.MyPlanList" table="user_plan">
    <id column="plan_id" name="plan_id"/>
    <property column="user_id" name="user_id"/>
    <property column="p_title" name="p_title"/>
    <property column="p_description" name="p_description"/>
  </class>
  <class name="org.IGNOU.ePortfolio.MyPlans.Model.UserPlanModel" table="user_plan">
    <id column="plan_id" name="plan_id">
      <generator class="increment"/>
    </id>
    <property column="user_id" name="user_id"/>
    <property column="p_title" name="p_title"/>
    <property column="p_description" name="p_description"/>
  </class>
  <class name="org.IGNOU.ePortfolio.MyPlans.Model.NewTask" table="user_plan_task">
    <id column="task_id" name="task_id">
      <generator class="increment"/>
    </id>
    <property column="plan_id" name="plan_id"/>
    <property column="t_title" name="t_title"/>
    <property column="t_description" name="t_description"/>
    <property column="t_date" name="t_date"/>
    <property column="status" name="status"/>
  </class>
</hibernate-mapping>
