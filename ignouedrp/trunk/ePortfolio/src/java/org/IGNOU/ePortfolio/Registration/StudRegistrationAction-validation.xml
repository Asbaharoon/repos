<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="emailId">
        <field-validator type="requiredstring">
            <message key="Please Enter a E-Mail Id." />
        </field-validator>
    </field>
      <field name="password">
        <field-validator type="requiredstring">
            <message key="Please Enter a password" />
        </field-validator>
    </field>
    
    <field name="rePassword">
        <field-validator type="requiredstring">
            <message key="Please Re-Enter The Password" />
        </field-validator>
    </field>
    
    <field name="role">
        <field-validator type="requiredstring">
            <message key="Please Choose a Role" />
        </field-validator>
    </field>
    
    <field name="fname">
        <field-validator type="requiredstring">
            <message key="Please Enter First Name" />
        </field-validator>
    </field>
    <field name="lname">
        <field-validator type="requiredstring">
            <message key="Please Enter Last Name" />
        </field-validator>
    </field>
     <field name="occupation">
        <field-validator type="requiredstring">
            <message key="Please Enter Your Occupation" />
        </field-validator>
    </field>
    
     <field name="univName">
        <field-validator type="requiredstring">
            <message key="Please Enter University Name" />
        </field-validator>
    </field>
    
     <field name="univRegNo">
        <field-validator type="requiredstring">
            <message key="Please Enter University Registration No." />
        </field-validator>
    </field>
    
    <field name="programe">
        <field-validator type="requiredstring">
            <message key="Please Enter Programe" />
        </field-validator>
    </field>
  </validators>
