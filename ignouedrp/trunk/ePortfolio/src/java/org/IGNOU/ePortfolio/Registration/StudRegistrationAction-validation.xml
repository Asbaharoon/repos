<!DOCTYPE validators PUBLIC "-//OpenSymphony Group//XWork Validator 1.0.2//EN"
    "http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd">
<validators>
    <field name="emailId">
        <field-validator type="email">
            <message key="Please Enter a E-Mail Id." />
        </field-validator>
    </field>
      <field name="password">
        <field-validator type="requiredstring">
            <message key="Please Enter a password" />
        </field-validator>
    </field>
    <field name="fname">
        <field-validator type="requiredstring">
            <message key="Please Enter First Name" />
        </field-validator>
    </field>
    <field name="lname">
        <field-validator type="requiredstring">
            <message key="Please Enter Last Name" />
        </field-validator>
    </field>
      <field name="instituteId">
        <field-validator type="required">
            <message key="Please Select University Name" />
        </field-validator>
    </field>
    
     <field name="univRegNo">
        <field-validator type="required">
            <message key="Please Enter University Registration No." />
        </field-validator>
    </field>
    
    <field name="programmeId">
        <field-validator type="required">
            <message key="Please Select Programe" />
        </field-validator>
    </field>
  </validators>
