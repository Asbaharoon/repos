<struts>
    <!-- Add your configuration elements here -->
    
    <package name="org.IGNOU.ePortfolio.Registration" namespace="/Registration" extends="struts-default">
        <action name="StudentReg" class="org.IGNOU.ePortfolio.Registration.StudRegistrationAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="execAndWait">
                <param name="excludeMethods">input,back,cancel</param>
            </interceptor-ref>
            <result name="wait">../Processing.jsp</result>
            <result name="success" >RegistrationSuccess.jsp</result>
            <result name="error">StudentRegistration.jsp</result>
            <result name="input">StudentRegistration.jsp</result>
        </action>      
        <action name="FacultyReg" class="org.IGNOU.ePortfolio.Registration.StudRegistrationAction">
            <interceptor-ref name="defaultStack"/>
            <interceptor-ref name="execAndWait">
                <param name="excludeMethods">input,back,cancel</param>
            </interceptor-ref>
            <result name="wait">../Processing.jsp</result>
            <result name="success">RegistrationSuccess.jsp</result>
            <result name="error">FacultyRegistration.jsp</result>
            <result name="input">FacultyRegistration.jsp</result>
        </action>  
        <action name="CheckAvail"  class="org.IGNOU.ePortfolio.Registration.Check" method="Avail">
            <result type="stream">
                <param name="contentType">text/html</param>
                <param name="inputName">inputStream</param>
            </result>
        </action>         
        <action name="AddInst" class="org.IGNOU.ePortfolio.Registration.InstituteRegAction">
            <result name="success" type="redirectAction">ShowRegisteredInstitute</result>
            <result name="error">./error.jsp</result>
            <result name="input">./InstituteRegistration.jsp</result>
        </action>
    </package>
</struts>
