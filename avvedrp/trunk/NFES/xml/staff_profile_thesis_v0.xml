<script language="javascript">
var resume=0;
var x=""
function load()
{       
    if(document.myForm.choose[1].checked){
    	 choose_click("Thesis");
    }else{
         choose_click("Student Project");
    }
}


function thesis_upload_dirty()
{
	resume=1;
}
function project_upload_dirty()
{
	resume=1;
}
function submitform_staff_profile_thesis_v0()
{
   var frmelement=document.getElementById("staff_profile_thesis_v0");
   if (isMandatoryDataExists(frmelement)=="1") 
   { 
     if(x=="Thesis")
     {
	if(resume==1)
	{      if (document.forms[1].thesis_uploadfiles.value==""){
			document.forms[0].thesis_upload.value=document.forms[1].thesis_upload.value 
		}	
		else
		{
	       		document.forms[0].thesis_upload.value=document.forms[1].thesis_upload.value + "|"+ document.forms[1].thesis_uploadfiles.value; 
	       	}
	       
	        document.forms[1].submit();docHtmlSave();
	}
	else
	{
		document.forms[0].thesis_upload.value=document.forms[1].thesis_uploadfiles.value
		docHtmlSave();
	}
     }
     else
     {
     	if(resume==1)
	{      if (document.forms[2].project_uploadfiles.value==""){
			document.forms[0].project_upload.value=document.forms[2].project_upload.value 
		}	
		else
		{
	       		document.forms[0].project_upload.value=document.forms[2].project_upload.value + "|"+ document.forms[2].project_uploadfiles.value; 
	       	}
	       
	        document.forms[2].submit();docHtmlSave();
	}
	else
	{
		document.forms[0].project_upload.value=document.forms[2].project_uploadfiles.value
		docHtmlSave();
	}
     }   
   }
}

function choose_click(value)
{
	if(value=="Thesis")
	{
		document.getElementById("d2").style.display='none';
		document.getElementById("fu2").style.display='none';
		document.getElementById("d1").style.display='block';
		document.getElementById("fu1").style.display='block';
		x="Thesis";resume=0;
		document.getElementById("mf01").value="thesis_title|thesis_author|thesis_department_institution|thesis_course_programe|thesis_external_internal|thesis_registration_month_year";
	}
	else
	{
		document.getElementById("d1").style.display='none';
		document.getElementById("fu1").style.display='none';
		document.getElementById("d2").style.display='block';
		document.getElementById("fu2").style.display='block';
		x="Student Project";resume=0;
		document.getElementById("mf01").value="project_title|project_student_group|project_student_name|project_type|project_start_month_year";
	}
}

</script>
</head>
