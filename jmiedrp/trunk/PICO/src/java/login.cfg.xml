<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC "-//Hibernate/Hibernate Configuration DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
  <session-factory>
    <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/login</property>
    <property name="hibernate.connection.datasource">java:comp/env/jdbc/login</property>
    <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>
    <property name="hibernate.default_catalog">login</property>
    <mapping resource="pojo/hibernate/Edrpusers.hbm.xml"/>
    <mapping resource="pojo/hibernate/Edrpuserlaststatus.hbm.xml"/>
    <mapping resource="pojo/hibernate/Edrpuserprofile.hbm.xml"/>
  </session-factory>
</hibernate-configuration>
