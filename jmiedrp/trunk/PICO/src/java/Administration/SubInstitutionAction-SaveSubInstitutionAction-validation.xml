<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE validators PUBLIC '-//OpenSymphony Group//XWork Validator 1.0.2//EN'
'http://www.opensymphony.com/xwork/xwork-validator-1.0.2.dtd'>

<validators>

    <field name="sim.institutionmaster.imId">
        <field-validator type="required">
            <message>Institution must be selected</message>
        </field-validator>
    </field>

    <field name="sim.simName">
        <field-validator type="required">
            <message>Sub Institution name is required</message>
        </field-validator>
    </field>

    <field name="sim.subinstitutiontype.erpmgmEgmId">
        <field-validator type="required">
            <message>Sub Institution type is required</message>
        </field-validator>
    </field>

    <field name="sim.simShortName">
        <field-validator type="required">
            <message>Sub Institution short name is required</message>
        </field-validator>
    </field>

    <field name="sim.simAddressLine1">
        <field-validator type="required">
            <message>Please enter Sub Institution address</message>
        </field-validator>
    </field>

    <field name="sim.statemaster.stateId">
        <field-validator type="required">
            <message>Please select State</message>
        </field-validator>
    </field>

    <field name="sim.simEmailId">

        <field-validator type="required">
            <message>Sub Institution email id is required</message>
        </field-validator>

        <field-validator type="email">
            <message>Enter a valid email id</message>
        </field-validator>

    </field>
</validators>